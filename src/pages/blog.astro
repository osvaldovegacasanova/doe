---
import Section from '../components/Section.astro';
import MainLayout from '../layouts/MainLayout.astro';
import { navLinks } from '../data';
import Navbar from '../components/Navbar';
import Footer from '../components/Footer.astro';
import BlogItem from '../components/BlogItem.astro';
const allPosts = Object.values(import.meta.glob('./blogs/*.md', { eager: true }));
allPosts.sort(
  (a, b) =>
    Date.parse(b.frontmatter.pubDate) - Date.parse(a.frontmatter.pubDate)
);
---

<MainLayout
  title="Blog de Marketing Digital | Pixory Chile"
  description="Artículos sobre SEO, Google Ads, Inteligencia Artificial y estrategias de marketing digital. Insights de expertos con +15 años de experiencia."
  url="https://www.pixory.cl/blog"
  image="/og-blog.jpg"
>
  <Section styles='min-h-[70vh]'>
    <Navbar navLinks={navLinks} client:load />
    <div class='my-5 md:p-10'>
      <h1 class='font-serif text-4xl md:text-5xl font-bold text-center my-5 mb-8'>Blog de Marketing Digital</h1>
      <div class='grid grid-cols-1 gap-2 md:grid-cols-3 md:gap-5'>
        {allPosts.map((post) => <BlogItem post={post} />)}
      </div>
    </div>
  </Section>
  <Footer navLinks={navLinks} />
</MainLayout>
