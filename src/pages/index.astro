---
import MainLayout from '../layouts/MainLayout.astro';
import {
  myName,
  myBio,
  navLinks,
  selectedProjects,
  aboutMe,
  skills,
  workExperiences,
  writingText,
  contactText,
  contactOptions,
  clientLogos,
} from '../data';
import AboutSection from '../components/sections/AboutSection.astro';
import MainSection from '../components/sections/MainSection.astro';
import BlogSection from '../components/sections/BlogSection.astro';
import Footer from '../components/Footer.astro';
import ContactSection from '../components/sections/ContactSection.astro';
import LogoSlider from '../components/LogoSlider';
import ScrollReveal from '../components/ScrollReveal';
---

<MainLayout
  title="Agencia de Marketing Digital en Chile | SEO, Google Ads, IA"
  description="Expertos en marketing digital: posicionamiento SEO, campa침as Google Ads, automatizaci칩n con IA y an치lisis de datos. +15 a침os transformando marcas en Chile."
  url="https://pixory.cl/"
  image="/og-home.jpg"
>
  <MainSection
    navLinks={navLinks}
    myName={myName}
    myBio={myBio}
    selectedProjects={selectedProjects}
  />
  <ScrollReveal client:load>
    <section class="w-full bg-slate-50 border-y border-slate-200">
      <LogoSlider logos={clientLogos} client:load />
    </section>
  </ScrollReveal>
  <ScrollReveal client:load delay={0.2}>
    <AboutSection
      aboutMe={aboutMe}
      skills={skills}
      workExperiences={workExperiences}
    />
  </ScrollReveal>
  <ScrollReveal client:load delay={0.2}>
    <BlogSection writingText={writingText} />
  </ScrollReveal>
  <ScrollReveal client:load delay={0.2}>
    <ContactSection contactText={contactText} contactOptions={contactOptions} />
  </ScrollReveal>
  <Footer navLinks={navLinks} />
</MainLayout>
