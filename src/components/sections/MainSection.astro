---
import Navbar from '../Navbar';
import Section from '../Section.astro';
import SelectedProjectBox from '../SelectedProjectBox.astro';
import ScrollReveal from '../ScrollReveal';
const { navLinks, myName, myBio, selectedProjects } = Astro.props;
---

<Section styles='p-1'>
  <Navbar navLinks={navLinks} client:load />
  <div
    class='mt-[3rem] md:mt-3 flex flex-col md:flex-row basis-0 gap-1 md:justify-between md:gap-[5rem] items-center w-full min-h-[80vh] md:min-h-[85vh]'
  >
    <ScrollReveal client:load delay={0.3} blur={15} className='w-[100%] md:w-[60%]'>
      <div class='introduction p-5'>
        <div class='intro-text-box'>
          <h1
            class='intro-text leading-[3.5rem] md:leading-[6.5rem] font-bold text-[3.5rem] md:text-[5rem] lg:text-[6rem] xl:text-[7rem]'
          >
            {myName}.
          </h1>
        </div>
        <p
          class='intro-bio mt-5 md:mt-8 mb-5 leading-6 md:leading-7 md:text-2xl text-slate-700 text-justify'
        >
          {myBio}
        </p>
      </div>
    </ScrollReveal>
    <ScrollReveal client:load delay={0.5} blur={15} className='w-[100%] md:w-[30%] md:mr-5'>
      <div
        class='projects justify-start flex flex-col gap-5'
      >
        <h2 class='heading text-slate-600 uppercase font-semibold ml-4'>
          Inteligencia | Transformaci√≥n
        </h2>

        <SelectedProjectBox projects={selectedProjects} />

      </div>
    </ScrollReveal>
  </div></Section
>
